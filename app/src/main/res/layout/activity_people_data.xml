<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PeopleDataActivity"
    android:layout_margin="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="please Confirm Your Identity!"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginVertical="15dp"
        android:textColor="@color/black"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIK:"
        android:textSize="15sp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/viewNik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1001010320405"
        android:textSize="16sp"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="15sp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/viewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="16sp"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birthplace:"
        android:textSize="15sp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/viewBirthPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="birthplace"
        android:textSize="16sp"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birthday:"
        android:textSize="15sp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/viewBirthDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="birthday"
        android:textSize="16sp"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textSize="15sp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/viewAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="address"
        android:textSize="16sp"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender:"
        android:textSize="15sp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/viewGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="noLGBT"
        android:textSize="16sp"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Occupation:"
        android:textSize="15sp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/viewOccupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="occupation"
        android:textSize="16sp"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marriage Status:"
        android:textSize="15sp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/viewMarriageStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="just like 2D girl"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/backBTN"
            app:icon="@drawable/ic_baseline_arrow_back_ios_24"
            app:iconGravity="start"
            android:layout_marginHorizontal="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Back"/>
    </LinearLayout>

</LinearLayout>